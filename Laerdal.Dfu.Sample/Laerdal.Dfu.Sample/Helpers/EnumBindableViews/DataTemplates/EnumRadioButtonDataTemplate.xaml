<?xml version="1.0" encoding="utf-8"?>

<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Laerdal.Dfu.Sample.Helpers.EnumBindableViews.Models;assembly=Laerdal.Dfu.Sample"
             x:DataType="models:EnumModel"
             HorizontalOptions="Fill" VerticalOptions="Fill"
             Orientation="Horizontal"
             x:Class="Laerdal.Dfu.Sample.Helpers.EnumBindableViews.DataTemplates.EnumRadioButtonDataTemplate">
    <StackLayout.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped" />
    </StackLayout.GestureRecognizers>

    <RadioButton IsChecked="{Binding IsChecked}" x:Name="MainRadioButton"
                 GroupName="{Binding GroupName}"/>
    <Label Text="{Binding .}"
           LineBreakMode="TailTruncation"
           HorizontalOptions="Fill"
           VerticalOptions="Fill"
           HorizontalTextAlignment="Start"
           VerticalTextAlignment="Center"
           MaxLines="1" />
</StackLayout>